
<%= form_with model: @post do |f| %>
	
	<div class="field py-2">
		<%= f.label :title, 'Title:' %><br>
		<%= f.text_field :title, :size =>"50", :maxlength=>"50", :class => "border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
	</div>
	<div class="field py-2">
		<%= f.label :body, 'Content:'  %><br>
		<%= f.text_area :body, :cols =>"53", :class => 'border rounded  py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
	</div>	
	<div class="inline-flex">
		<%= button_tag(type: 'submit', class: "btn btn-blue") do %>
		 	Update Post
		<% end %>
		<%= link_to "Cancel", post_path(@post),
		:class => 'btn btn-blue',
		data: {confirm: "Are you sure"} %>
	</div>
	
<% end %>