<!--Global HTML-->

<!DOCTYPE html>
<html>
  <head>
    <title>Tailwind Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
  	<nav class="fixed flex-wrap mb-10 w-full flex items-center justify-between  bg-gray-800 ">
	  <div class="flex items-center flex-shrink-0 text-white mr-6 ml-6">
	    <a href='/home'>
		    <i class="fas fa-wind mr-3"></i>
		    <span  class="font-bold text-xl">Tailwind Blog</span>
	  	</a>
	  </div>
	
	  <div class="w-full block flex-grow sm:flex sm:items-center sm:w-auto  mx-6">
	    <div class="text-sm sm:flex-grow">
	      <% if user_signed_in? %>
		      <a href="/new" class="block sm:inline-block sm:mt-0 text-teal-200 hover:text-white mr-4">
		        New
		      </a>
	      <% end %>
	      <a href="/about" class="block sm:inline-block sm:mt-0 text-teal-200 hover:text-white mr-4">
	        About
	      </a>
	    </div>
	    <div class="navbar-text float-right mx-4">
	    	<% if user_signed_in? %>
			  Logged in as   <strong class="block sm:inline-block sm:mt-0 text-teal-200 mx-4"><%= current_user.name %> : <%= current_user.email %></strong>
			  <%= link_to 'Edit profile', edit_user_registration_path, :class => "block sm:inline-block sm:mt-0 text-teal-200 hover:text-white mx-4" %>
			   | 
			  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'block sm:inline-block sm:mt-0 text-teal-200 hover:text-white mx-4' %>
			<% else %>
			  <%= link_to "Sign up", new_user_registration_path, :class => 'block sm:inline-block sm:mt-0 text-teal-200 hover:text-white mx-4'  %>
			   | 
			  <%= link_to "Login", new_user_session_path, :class => 'block  sm:inline-block sm:mt-0 text-teal-200 hover:text-white mx-4'  %>
			<% end %>
	    </div>
	  </div>
	</nav>
	
	<div class="m-0 pt-8">
	
		<% if notice %>
		  <p class="alert alert-success"><%= notice %></p>
		<% end %>
		<% if alert %>
		  <p class="alert alert-danger"><%= alert %></p>
		<% end %>
    </div>
    <%= yield %>
  </body>
</html>
