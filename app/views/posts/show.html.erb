<h2><%= @post.title %></h2>
<p><%= @post.body %></p>
<hr>

<%= link_to "edit", edit_post_path(@post), :class => "btn btn-secondary my-2 my-sm-0"%>
<%= link_to "delete", post_path(@post),
	method: :delete,
	data: {confirm: "Are you sure"},
	:class => "btn btn-danger my-2 my-sm-0" %>

<hr>

<%= render 'comments/comment' %>
<%= render 'comments/form' %>
