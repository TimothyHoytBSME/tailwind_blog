<!-- comment display partial -->


<% if @post.comments.count.to_i > 0 %>
	<div class="text-3xl lg:text-lg my-5">
		<h3>Comments</h3>
	</div>
<% else %>
	<div class="text-3xl lg:text-lg my-5">
		<h3>No Comments Yet</h3>
	</div>
<% end %>

<% @post.comments.each do |comment| %>
<div>
	<p class="text-2xl lg:text-sm m-3">
		<!--<strong><%= comment.title %></strong>-->
		<strong class="text-3xl lg:text-lg mr-4"><%= comment.user.name %></strong>  
		<%= comment.body %>
		<%= link_to '[X]', [comment.post, comment],
		method: :delete,
		data: { confirm: "Are you sure?"} %>
	</p>
</div>
<% end %>