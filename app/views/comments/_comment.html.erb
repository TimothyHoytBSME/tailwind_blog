
<% if @post.comments.count.to_i > 0 %>
 <div ><h3>Comments</h3></div>
<% else %>

<% end %>


<% @post.comments.each do |comment| %>
	<div>
		<p>
			<strong><%= comment.title %></strong>: <%= comment.body %>
			<%= link_to '[X]', [comment.post, comment],
				method: :delete,
				data: { confirm: "Are you sure?"} %>
		</p>		
		
	</div>
<% end %>