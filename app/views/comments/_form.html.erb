<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
	
	<p>
		<%= f.label :title %>
		<%= f.text_field(:title, {:class => "form-control"})%>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area(:body, {:class => "form-control"})%>
	</p>
	<p>
		<%= f.submit(:submit, {:class => "btn btn-secondary my-2 my-sm-0"})%>
	</p>
<%end%>